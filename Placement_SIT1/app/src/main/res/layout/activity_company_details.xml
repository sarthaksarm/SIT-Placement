        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Enter Company Package"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="@color/Golden" />

    <TextView
        android:id="@+id/branchtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/dt" />


    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/packagetxt"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:text="Select Branches:"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="17dp" />
    <CheckBox
        android:id="@+id/checkBox25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/branch"
