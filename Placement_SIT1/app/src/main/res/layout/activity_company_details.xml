<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    tools:context=".Company_details"
    >

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="820dp"
>

    <TextView
        android:id="@+id/dt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:textSize="22dp"
        android:hint="Company Visit"
        android:textColor="#000"
        android:textColorHint="@color/Golden" />

    <EditText
        android:id="@+id/tm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/packagetxt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-128dp"
        android:ems="10"
        android:hint="Enter Company Name"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="@color/Golden"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="262dp" />

    <EditText
        android:id="@+id/regislinket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timeedit"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Registration link"
        android:textColor="#000"
        android:textColorHint="@color/Golden" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/regislinket"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/designbtns"
        android:text="SAVE"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/dtdead"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dtdeadline"
        android:background="@color/btncolor"
        android:hint="SELECT DATE"
        android:textColorHint="#000" />

<TextView
